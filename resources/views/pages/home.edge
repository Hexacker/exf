@layout.dashboard({title: title || 'Dashboard - EXF'})

<div class="mx-auto max-w-7xl">
  <h1 class="text-3xl font-bold mb-6">EXF Test Page</h1>

    <div class="space-y-4">
      <a href="/auth/signup" class="block">
        @!form.button({
        text: 'Sign Up',
        variant: 'primary',
        textColor: 'white',
        class: 'me-2 mb-2 w-full sm:w-auto'
        })
      </a>

      <a href="/auth/signin" class="block">
        @!form.button({
        text: 'Sign In',
        variant: 'primary',
        textColor: 'white',
        class: 'me-2 mb-2 w-full sm:w-auto'
        })
      </a>

      <a href="/auth/reset" class="block">
        @!form.button({
        text: 'Reset Password',
        variant: 'primary',
        textColor: 'white',
        class: 'me-2 mb-2 w-full sm:w-auto'
        })
      </a>
    </div>

</div>

@end
