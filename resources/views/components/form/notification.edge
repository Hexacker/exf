<div class="rounded-lg {{ type === 'success' ? 'bg-[color-mix(in_oklch,var(--color-buttons-500)_10%,white)] border border-[color-mix(in_oklch,var(--color-buttons-500)_30%,white)]' : type === 'error' ? 'bg-[color-mix(in_oklch,red_500_10%,white)] border border-[color-mix(in_oklch,red_500_30%,white)]' : type === 'warning' ? 'bg-[color-mix(in_oklch,yellow_500_10%,white)] border border-[color-mix(in_oklch,yellow_500_30%,white)]' : 'bg-[color-mix(in_oklch,var(--color-primary)_10%,white)] border border-[color-mix(in_oklch,var(--color-primary)_30%,white)]' }} notification-alert">
  <div class="p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        @if(type === 'success')
          <svg class="h-5 w-5 text-[var(--color-buttons-500)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          @elseif(type === 'error')
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          @elseif(type === 'warning')
          <svg class="h-5 w-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
          @else
          <svg class="h-5 w-5 text-[var(--color-primary)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        @end
      </div>
      <div class="ml-3 flex-1">
        @if(title)
          <h3 class="text-sm font-medium {{ type === 'success' ? 'text-[color-mix(in_oklch,var(--color-buttons-500)_70%,black)]' : type === 'error' ? 'text-[color-mix(in_oklch,red_800_70%,black)]' : type === 'warning' ? 'text-[color-mix(in_oklch,yellow_800_70%,black)]' : 'text-[color-mix(in_oklch,var(--color-primary)_70%,black)]' }}">
            {{ title }}
          </h3>
        @end
        <div class="mt-2 text-sm {{ type === 'success' ? 'text-[color-mix(in_oklch,var(--color-buttons-500)_60%,black)]' : type === 'error' ? 'text-[color-mix(in_oklch,red_700_60%,black)]' : type === 'warning' ? 'text-[color-mix(in_oklch,yellow_700_60%,black)]' : 'text-[color-mix(in_oklch,var(--color-primary)_60%,black)]' }}">
          <p>
            {{ message || title }}
          </p>
        </div>
      </div>
      <div class="ml-4 flex-shrink-0">
        <button type="button" class="notification-close-button bg-transparent rounded-md inline-flex text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 {{ type === 'success' ? 'focus:ring-[var(--color-buttons-500)]' : type === 'error' ? 'focus:ring-red-500' : type === 'warning' ? 'focus:ring-yellow-500' : 'focus:ring-[var(--color-primary)]' }}">
          <span class="sr-only">Close</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
      </div>
    </div>
  </div>
</div>
